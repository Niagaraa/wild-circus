                <td>{{ show.date ? show.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ show.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ show.description }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ show.city }}</td>
