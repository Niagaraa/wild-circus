<form method="post" action="{{ path('troop_delete', {'id': troop.id}) }}"
      onsubmit="return confirm('Voulez-vous supprimer ce membre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ troop.id) }}">
    <button class="btn btn-danger mt-2">
        <i class="fas fa-times mr-2"></i> Supprimer
    </button>
</form>
