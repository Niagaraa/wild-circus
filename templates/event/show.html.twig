{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <div class="container admin">

        <a href="{{ path('event_index') }}" class="btn btn-secondary mt-5 mb-5">
            <i class="fas fa-reply mr-2"></i> Retour
        </a>

        <div class="d-flex align-items-center mb-5">
            <h1>{{ event.title }}</h1>
            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-secondary ml-3">
                <i class="fas fa-cog mr-2"></i> Modifier
            </a>
        </div>

        <table class="table table-striped table-dark mb-5">
            <tbody>
            <tr>
                <th>Date</th>
                <td>{{ event.date|date('d/m/Y H:i') }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ event.city }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ event.picture }}" alt="Photo de {{ event.title }}" class="picture-show"></td>
            </tr>
            </tbody>
        </table>

    </div>
{% endblock %}
