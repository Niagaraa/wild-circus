{% extends 'base.html.twig' %}

{% block title %}Spectacles{% endblock %}

{% block body %}
<div class="container admin">
    <h1 class="title">Tous les spectacles</h1>

    <a href="{{ path('event_new') }}" class="btn btn-secondary m-5">
        <i class="fas fa-plus mr-2"></i> Ajouter un spectacle
    </a>

    <table class="table table-striped table-dark mb-5">
        <thead class="align-middle">
        <tr>
            <th></th>
            <th class="w-25">Titre du spectacle</th>
            <th class="w-25 align-middle">Photo</th>
            <th class="align-middle">Ville</th>
            <th class="align-middle">Date</th>
            <th class="align-middle">Gestion</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ event.title }}</td>
                <td><img src="{{ event.picture }}" alt="photo du spectacle {{ event.title }}" class="w-100"></td>
                <td>{{ event.city }}</td>
                <td>{{ event.date|date('d/m/Y H:i') }}</td>
                <td class="buttons align-middle">
                    <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-secondary">
                        <i class="far fa-eye mr-2"></i> En savoir plus
                    </a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-secondary mt-2">
                        <i class="fas fa-cogs mr-2"></i> Modifier
                    </a>
                    {{ include('event/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
